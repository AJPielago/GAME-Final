  <script>
    // Chart data from server
    const chartData = <%- JSON.stringify(typeof chartData !== 'undefined' ? chartData : {}) %>;

    // Debug - check what data we have
    console.log('Chart data received:', !!chartData);
    if (chartData) {
      console.log('Available chart data keys:', Object.keys(chartData));
      console.log('Level distribution length:', chartData.levelDistribution?.length || 0);
      console.log('Character types length:', chartData.characterTypes?.length || 0);
      console.log('JS levels length:', chartData.jsLevels?.length || 0);
      console.log('Full chartData:', JSON.stringify(chartData, null, 2));
    } else {
      console.error('NO CHART DATA RECEIVED!');
    }

    // Set default Chart.js options for better appearance
    Chart.defaults.color = '#ffffff';
    Chart.defaults.font.family = 'var(--font-fantasy)';
    Chart.defaults.font.size = 12;

    // Level Distribution Bar Chart
    const levelCtx = document.getElementById('levelBarChart');
    console.log('Level canvas element found:', !!levelCtx);
    console.log('chartData.levelDistribution exists:', !!chartData.levelDistribution);
    console.log('Is array:', Array.isArray(chartData.levelDistribution));
    console.log('Array length:', chartData.levelDistribution?.length);
    console.log('Full condition check:', levelCtx && chartData.levelDistribution && Array.isArray(chartData.levelDistribution) && chartData.levelDistribution.length > 0);
    
    if (levelCtx) {
      if (!chartData.levelDistribution) {
        console.error('levelDistribution is missing from chartData!');
      } else if (!Array.isArray(chartData.levelDistribution)) {
        console.error('levelDistribution is not an array! Type:', typeof chartData.levelDistribution);
      } else if (chartData.levelDistribution.length === 0) {
        console.error('levelDistribution array is empty!');
      } else {
        // We have data, create the chart
        try {
          const levelLabels = chartData.levelDistribution.map(item => item.label);
          const levelValues = chartData.levelDistribution.map(item => item.value);

          console.log('Creating level chart with labels:', levelLabels);
          console.log('Creating level chart with values:', levelValues);

          new Chart(levelCtx, {
            type: 'bar',
            data: {
              labels: levelLabels,
              datasets: [{
                label: 'Users',
                data: levelValues,
                backgroundColor: [
                  'rgba(255, 99, 132, 0.8)',
                  'rgba(54, 162, 235, 0.8)',
                  'rgba(255, 205, 86, 0.8)',
                  'rgba(75, 192, 192, 0.8)',
                  'rgba(153, 102, 255, 0.8)',
                  'rgba(255, 159, 64, 0.8)',
                  'rgba(201, 203, 207, 0.8)'
                ],
                borderColor: [
                  'rgb(255, 99, 132)',
                  'rgb(54, 162, 235)',
                  'rgb(255, 205, 86)',
                  'rgb(75, 192, 192)',
                  'rgb(153, 102, 255)',
                  'rgb(255, 159, 64)',
                  'rgb(201, 203, 207)'
                ],
                borderWidth: 2,
                borderRadius: 8,
                borderSkipped: false,
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: true,
              aspectRatio: 16/9,
              plugins: {
                legend: {
                  display: false
                },
                title: {
                  display: true,
                  text: 'User Level Distribution',
                  color: '#FFD700',
                  font: {
                    size: 16,
                    weight: 'bold'
                  }
                }
              },
              scales: {
                y: {
                  beginAtZero: true,
                  grid: {
                    color: 'rgba(255, 255, 255, 0.1)'
                  },
                  ticks: {
                    color: '#ffffff'
                  }
                },
                x: {
                  grid: {
                    color: 'rgba(255, 255, 255, 0.1)'
                  },
                  ticks: {
                    color: '#ffffff',
                    maxRotation: 45,
                    minRotation: 45
                  }
                }
              }
            }
          });
          console.log('✅ Level chart created successfully!');
        } catch (error) {
          console.error('❌ Error creating level chart:', error);
          const ctx = levelCtx.getContext('2d');
          ctx.clearRect(0, 0, levelCtx.width, levelCtx.height);
          ctx.font = '14px Arial';
          ctx.fillStyle = '#f00';
          ctx.textAlign = 'center';
          ctx.fillText('Chart Error', levelCtx.width / 2, levelCtx.height / 2);
        }
      }
    }

    // Character Type Pie Chart
    const characterCtx = document.getElementById('characterPieChart');
    if (characterCtx && chartData.characterTypes && Array.isArray(chartData.characterTypes) && chartData.characterTypes.length > 0) {
      try {
        const characterLabels = chartData.characterTypes.map(item => 
          (item.label || 'Unknown').charAt(0).toUpperCase() + (item.label || 'Unknown').slice(1)
        );
        const characterValues = chartData.characterTypes.map(item => item.value || 0);

        new Chart(characterCtx, {
          type: 'pie',
          data: {
            labels: characterLabels,
            datasets: [{
              data: characterValues,
              backgroundColor: [
                '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
              ],
              borderColor: [
                '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
              ],
              borderWidth: 2,
              hoverOffset: 10
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: true,
            aspectRatio: 16/9,
            plugins: {
              legend: {
                position: 'bottom',
                labels: {
                  color: '#ffffff',
                  padding: 20,
                  usePointStyle: true
                }
              },
              title: {
                display: true,
                text: 'Character Type Distribution',
                color: '#FFD700',
                font: {
                  size: 16,
                  weight: 'bold'
                }
              }
            }
          }
        });
      } catch (error) {
        console.error('Error creating character chart:', error);
        const ctx = characterCtx.getContext('2d');
        ctx.clearRect(0, 0, characterCtx.width, characterCtx.height);
        ctx.font = '14px Arial';
        ctx.fillStyle = '#f00';
        ctx.textAlign = 'center';
        ctx.fillText('Chart Error', characterCtx.width / 2, characterCtx.height / 2);
      }
    }

    // JavaScript Skill Levels Bar Chart
    const jsSkillCtx = document.getElementById('jsSkillBarChart');
    if (jsSkillCtx && chartData.jsLevels && Array.isArray(chartData.jsLevels) && chartData.jsLevels.length > 0) {
      try {
        const jsLabels = chartData.jsLevels.map(item => 
          (item.label || 'Unknown').charAt(0).toUpperCase() + (item.label || 'Unknown').slice(1)
        );
        const jsValues = chartData.jsLevels.map(item => item.value || 0);

        new Chart(jsSkillCtx, {
          type: 'bar',
          data: {
            labels: jsLabels,
            datasets: [{
              label: 'Users',
              data: jsValues,
              backgroundColor: 'rgba(75, 192, 192, 0.8)',
              borderColor: 'rgb(75, 192, 192)',
              borderWidth: 2,
              borderRadius: 8,
              borderSkipped: false,
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: true,
            aspectRatio: 16/9,
            plugins: {
              legend: {
                display: false
              },
              title: {
                display: true,
                text: 'JavaScript Skill Distribution',
                color: '#FFD700',
                font: {
                  size: 16,
                  weight: 'bold'
                }
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                grid: {
                  color: 'rgba(255, 255, 255, 0.1)'
                },
                ticks: {
                  color: '#ffffff'
                }
              },
              x: {
                grid: {
                  color: 'rgba(255, 255, 255, 0.1)'
                },
                ticks: {
                  color: '#ffffff'
                }
              }
            }
          }
        });
      } catch (error) {
        console.error('Error creating JS skill chart:', error);
        const ctx = jsSkillCtx.getContext('2d');
        ctx.clearRect(0, 0, jsSkillCtx.width, jsSkillCtx.height);
        ctx.font = '14px Arial';
        ctx.fillStyle = '#f00';
        ctx.textAlign = 'center';
        ctx.fillText('Chart Error', jsSkillCtx.width / 2, jsSkillCtx.height / 2);
      }
    }

