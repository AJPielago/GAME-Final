    // CRUD Operations
    function openCreateUserModal() {
      // Reset form
      document.getElementById('createUserForm').reset();
      // Show modal
      const modal = new bootstrap.Modal(document.getElementById('createUserModal'));
      modal.show();
    }

    async function createUser() {
      const username = document.getElementById('createUsername').value.trim();
      const email = document.getElementById('createEmail').value.trim();
      const password = document.getElementById('createPassword').value;
      const role = document.getElementById('createRole').value;
      const inGameName = document.getElementById('createInGameName').value.trim();
      const age = document.getElementById('createAge').value;
      const characterType = document.getElementById('createCharacterType').value;
      const jsLevel = document.getElementById('createJsLevel').value;

      if (!username || !email || !password) {
        alert('Please fill in all required fields (Username, Email, Password)');
        return;
      }

      try {
        const response = await fetch('/admin/api/users', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            username,
            email,
            password,
            role,
            inGameName: inGameName || null,
            age: age ? parseInt(age) : null,
            characterType,
            jsLevel
          })
        });

        const result = await response.json();

        if (result.success) {
          alert('User created successfully!');
          bootstrap.Modal.getInstance(document.getElementById('createUserModal')).hide();
          location.reload(); // Refresh the page to show the new user
        } else {
          alert('Error creating user: ' + result.message);
        }
      } catch (error) {
        console.error('Error creating user:', error);
        alert('Failed to create user. Please try again.');
      }
    }

    async function openEditUserModal(userId) {
      try {
        // Fetch user details
        const response = await fetch(`/admin/api/user/${userId}`);
        const result = await response.json();

        if (result.success) {
          const user = result.user;

          // Populate form
          document.getElementById('editUserId').value = userId;
          document.getElementById('editUsername').value = user.username || '';
          document.getElementById('editEmail').value = user.email || '';
          document.getElementById('editRole').value = user.role || 'player';
          document.getElementById('editIsActive').value = user.isActive ? 'true' : 'false';
          document.getElementById('editInGameName').value = user.inGameName || '';
          document.getElementById('editAge').value = user.age || '';
          document.getElementById('editCharacterType').value = user.characterType || 'knight';
          document.getElementById('editJsLevel').value = user.jsLevel || 'beginner';
          document.getElementById('editLevel').value = user.level || 1;
          document.getElementById('editExperience').value = user.experience || 0;
          document.getElementById('editPixelCoins').value = user.pixelCoins || 0;

          // Show modal
          const modal = new bootstrap.Modal(document.getElementById('editUserModal'));
          modal.show();
        } else {
          alert('Error fetching user details: ' + result.message);
        }
      } catch (error) {
        console.error('Error fetching user details:', error);
        alert('Failed to load user details. Please try again.');
      }
    }

    async function updateUser() {
      const userId = document.getElementById('editUserId').value;
      const username = document.getElementById('editUsername').value.trim();
      const email = document.getElementById('editEmail').value.trim();
      const role = document.getElementById('editRole').value;
      const isActive = document.getElementById('editIsActive').value === 'true';
      const inGameName = document.getElementById('editInGameName').value.trim();
      const age = document.getElementById('editAge').value;
      const characterType = document.getElementById('editCharacterType').value;
      const jsLevel = document.getElementById('editJsLevel').value;
      const level = parseInt(document.getElementById('editLevel').value) || 1;
      const experience = parseInt(document.getElementById('editExperience').value) || 0;
      const pixelCoins = parseInt(document.getElementById('editPixelCoins').value) || 0;

      if (!username || !email) {
        alert('Username and Email are required');
        return;
      }

      try {
        const response = await fetch(`/admin/api/users/${userId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            username,
            email,
            role,
            isActive,
            inGameName: inGameName || null,
            age: age ? parseInt(age) : null,
            characterType,
            jsLevel,
            level,
            experience,
            pixelCoins
          })
        });

        const result = await response.json();

        if (result.success) {
          alert('User updated successfully!');
          bootstrap.Modal.getInstance(document.getElementById('editUserModal')).hide();
          location.reload(); // Refresh the page to show the updated user
        } else {
          alert('Error updating user: ' + result.message);
        }
      } catch (error) {
        console.error('Error updating user:', error);
        alert('Failed to update user. Please try again.');
      }
    }

    async function deleteUser(userId, username) {
      if (!confirm(`Are you sure you want to delete user "${username}"? This action cannot be undone.`)) {
        return;
      }

      try {
        const response = await fetch(`/admin/api/users/${userId}`, {
          method: 'DELETE'
        });

        const result = await response.json();

        if (result.success) {
          alert('User deleted successfully!');
          location.reload(); // Refresh the page to remove the deleted user
        } else {
          alert('Error deleting user: ' + result.message);
        }
      } catch (error) {
        console.error('Error deleting user:', error);
        alert('Failed to delete user. Please try again.');
      }
    }

    async function toggleUserStatus(userId, currentStatus) {
      const newStatus = !currentStatus;
      const action = newStatus ? 'activate' : 'deactivate';
      const statusText = newStatus ? 'Active' : 'Inactive';
      
      if (!confirm(`Change user status to "${statusText}"? ${newStatus ? 'They will be able to log in again.' : 'They will not be able to log in until reactivated.'}`)) {
        return;
      }

      try {
        const response = await fetch(`/admin/api/users/${userId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            isActive: newStatus
          })
        });

        const result = await response.json();

        if (result.success) {
          alert(`User status changed to "${statusText}" successfully!`);
          location.reload(); // Refresh the page to show the updated status
        } else {
          alert('Error updating user status: ' + result.message);
        }
      } catch (error) {
        console.error('Error updating user status:', error);
        alert('Failed to update user status. Please try again.');
      }
    }
