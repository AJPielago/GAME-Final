            <input type="range" id="game-volume" min="0" max="1" step="0.1" value="0.5" style="width: 100%;">
            <button id="game-mute" class="audio-btn" style="margin-top: 2px; padding: 2px 8px; font-size: 10px;">üîä</button>
        </div>
        
