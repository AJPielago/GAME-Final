    <!-- UI Initialization -->
    <script>
        // Track UI state
        const uiState = {
            isInitialized: false,
            resizeTimeout: null
        };
        
        // Initialize UI components
        function initializeUI() {
            if (uiState.isInitialized) return;
            
            console.log('Initializing UI components...');
            
            // Mobile menu toggle functionality
            const navToggle = document.getElementById('navToggle');
            const navMenu = document.getElementById('navMenu');
            
            if (navToggle && navMenu) {
                // Toggle menu on button click
                const toggleMenu = (e) => {
                    if (e) {
                        e.stopPropagation();
                    }
                    navMenu.classList.toggle('active');
                };
                
                // Close menu when clicking outside
                const closeMenuOnOutsideClick = (event) => {
                    if (navMenu.classList.contains('active') && 
                        !navMenu.contains(event.target) && 
                        !navToggle.contains(event.target)) {
                        navMenu.classList.remove('active');
                    }
                };
                
                // Add event listeners
                navToggle.addEventListener('click', toggleMenu);
                document.addEventListener('click', closeMenuOnOutsideClick);
                
                // Handle window resize for responsive UI
                const handleResize = () => {
                    clearTimeout(uiState.resizeTimeout);
                    uiState.resizeTimeout = setTimeout(() => {
                        if (window.innerWidth > 768) {
                            navMenu.classList.remove('active');
                        }
                    }, 100);
                };
                
                window.addEventListener('resize', handleResize);
                
                // Mark as initialized
                uiState.isInitialized = true;
                
                console.log('UI initialized successfully');
            }
        }
        
        // Initialize UI when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeUI);
        } else {
            initializeUI();
        }
        
        // Audio Controls Panel Handler
        function initializeAudioControls() {
            const audioPanel = document.getElementById('audio-controls-panel');
            const showButton = document.getElementById('show-audio-controls');
            const closeButton = document.getElementById('toggle-audio-panel');
            
            // Show/hide panel
            showButton.addEventListener('click', () => {
                audioPanel.style.display = audioPanel.style.display === 'none' ? 'block' : 'none';
                showButton.style.display = audioPanel.style.display === 'none' ? 'block' : 'none';
            });
            
            closeButton.addEventListener('click', () => {
                audioPanel.style.display = 'none';
                showButton.style.display = 'block';
            });
            
            // Wait for AudioManager to be available
            const initControls = () => {
                if (!window.AudioManager) {
                    setTimeout(initControls, 100);
                    return;
                }
                
                const audioManager = window.AudioManager;
                
                // Set initial values
                document.getElementById('bg-volume').value = audioManager.backgroundVolume;
                document.getElementById('game-volume').value = audioManager.gameVolume;
                document.getElementById('sound-volume').value = audioManager.soundVolume;
                document.getElementById('master-volume').value = audioManager.masterMuted ? 0 : 1;
                
                updateMuteButtons();
                
                // Volume controls
                document.getElementById('bg-volume').addEventListener('input', (e) => {
                    audioManager.setBackgroundVolume(parseFloat(e.target.value));
                });
                
                document.getElementById('game-volume').addEventListener('input', (e) => {
                    audioManager.setGameVolume(parseFloat(e.target.value));
                });
                
                document.getElementById('sound-volume').addEventListener('input', (e) => {
                    audioManager.setSoundVolume(parseFloat(e.target.value));
                });
                
                document.getElementById('master-volume').addEventListener('input', (e) => {
                    const value = parseFloat(e.target.value);
                    if (value === 0) {
                        audioManager.toggleMasterMute();
                    } else if (audioManager.masterMuted) {
                        audioManager.toggleMasterMute();
                    }
                });
                
                // Mute buttons
                document.getElementById('bg-mute').addEventListener('click', () => {
                    audioManager.toggleBackgroundMute();
                    updateMuteButtons();
                });
                
                document.getElementById('game-mute').addEventListener('click', () => {
                    audioManager.toggleGameMute();
                    updateMuteButtons();
                });
                
                document.getElementById('sound-mute').addEventListener('click', () => {
                    audioManager.toggleSoundMute();
                    updateMuteButtons();
                });
                
                function updateMuteButtons() {
                    document.getElementById('bg-mute').textContent = audioManager.backgroundMuted ? 'üîá' : 'üîä';
                    document.getElementById('game-mute').textContent = audioManager.gameMuted ? 'üîá' : 'üîä';
                    document.getElementById('sound-mute').textContent = audioManager.soundMuted ? 'üîá' : 'üîä';
                    document.getElementById('master-volume').value = audioManager.masterMuted ? 0 : 1;
                }
            };
            
            initControls();
        }
        
        // Initialize audio controls when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeAudioControls);
        } else {
            initializeAudioControls();
        }
    </script>
</body>
